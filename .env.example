# FindMyMCP Configuration
# Copy this file to .env and fill in your values

# Required: Your Shodan API key
MCP_SCANNER_SHODAN_API_KEY=your-shodan-api-key-here

# Optional: Scan settings (optimized for speed)
MCP_SCANNER_MAX_RESULTS_PER_FILTER=100
MCP_SCANNER_MAX_CONCURRENT_VERIFICATIONS=50
MCP_SCANNER_VERIFICATION_TIMEOUT=3.0

# Optional: Output settings
MCP_SCANNER_OUTPUT_DIR=scan_results

# Optional: Network settings
MCP_SCANNER_USER_AGENT=FindMyMCP/1.0 (Security Research)
MCP_SCANNER_VERIFY_SSL=true
MCP_SCANNER_FOLLOW_REDIRECTS=true
MCP_SCANNER_MAX_REDIRECTS=5
